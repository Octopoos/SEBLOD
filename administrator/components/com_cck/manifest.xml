	<version>3.10.0</version>
	
	<scriptfile>script.php</scriptfile>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">install/install.sql</file>
			<file driver="mysql" charset="utf8">install/sql/countries.sql</file>
			<file driver="mysql" charset="utf8">install/sql/jobs.sql</file>
			<file driver="mysql" charset="utf8">install/sql/processings.sql</file>
			<file driver="mysql" charset="utf8">install/sql/sessions.sql</file>
		</sql>
	</install>
	
	<files folder="site">
		<folder>assets</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>views</folder>
		
		<filename>controller.php</filename>
		<filename>cck.php</filename>
		<filename>download.php</filename>
		<filename>router.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="site/languages">
		<language tag="en-GB">en-GB/en-GB.com_cck.ini</language>
		<language tag="en-GB">en-GB/en-GB.com_cck_default.ini</language>
		<language tag="en-GB">en-GB/en-GB.pkg_app_cck_joomla_article.ini</language>
		<language tag="en-GB">en-GB/en-GB.pkg_app_cck_joomla_category.ini</language>
		<language tag="en-GB">en-GB/en-GB.pkg_app_cck_joomla_user.ini</language>
		<language tag="en-GB">en-GB/en-GB.pkg_app_cck_joomla_user_group.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.com_cck.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.com_cck_default.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.pkg_app_cck_joomla_article.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.pkg_app_cck_joomla_category.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.pkg_app_cck_joomla_user.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.pkg_app_cck_joomla_user_group.ini</language>
	</languages>
	
	<administration>
		<menu img="components/com_cck/assets/images/16/icon-16-seblod.png">SEBLOD</menu>
		
		<files folder="admin">
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>install</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
	
			<filename>_CHANGELOG.php</filename>
			<filename>_VERSION.php</filename>
			<filename>access.xml</filename>
			<filename>cck.php</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
		</files>
		
		<languages folder="admin/languages">
			<language tag="en-GB">en-GB/en-GB.com_cck.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_cck.sys.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_cck_core.ini</language>
			<language tag="fr-FR">fr-FR/fr-FR.com_cck.ini</language>
			<language tag="fr-FR">fr-FR/fr-FR.com_cck.sys.ini</language>
			<language tag="fr-FR">fr-FR/fr-FR.com_cck_core.ini</language>
		</languages>
	</administration>	
	
	<media destination="cck" folder="media">
		<folder>apps</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>processings</folder>
		<folder>scripts</folder>
		
		<filename>index.html</filename>
	</media>
