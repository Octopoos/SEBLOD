<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="cck_field_validation" version="2.5" method="upgrade">
	<name>plg_cck_field_validation_ajax_availability</name>
	<author>Octopoos</author>
	<authorEmail>contact@seblod.com</authorEmail>
	<authorUrl>http://www.seblod.com</authorUrl>
	<copyright>Copyright (C) 2009 - 2016 SEBLOD. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<creationDate>January 2012</creationDate>
	<description>SEBLOD 3.x - www.seblod.com // by Octopoos - www.octopoos.com</description>
	<version>3.10.0</version>
	
	<scriptfile>install/script.php</scriptfile>
	
	<files>
		<folder>assets</folder>
		<folder>install</folder>
		<folder>tmpl</folder>
		
		<filename plugin="ajax_availability">ajax_availability.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_validation_ajax_availability.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_validation_ajax_availability.sys.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_cck_field_validation_ajax_availability.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_cck_field_validation_ajax_availability.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params" addfieldpath="/libraries/cck/construction/field">
			<fieldset name="basic">
				<field name="alert" type="text" default="PLG_CCK_FIELD_VALIDATION_AJAX_AVAILABILITY_ALERT" label="LIB_CCK_ALERT_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_ALERT_DESC" disabled="true" />
				<field name="alert2" type="text" default="PLG_CCK_FIELD_VALIDATION_AJAX_AVAILABILITY_ALERT2" label="PLG_CCK_FIELD_VALIDATION_ALERT2_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_ALERT_DESC" disabled="true" />
				<field name="alert3" type="text" default="PLG_CCK_FIELD_VALIDATION_AJAX_AVAILABILITY_ALERT3" label="PLG_CCK_FIELD_VALIDATION_ALERT3_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_ALERT_DESC" disabled="true" />
			</fieldset>
			
			<fieldset name="advanced">
				<field name="group" type="text" default="PLG_CCK_FIELD_VALIDATION_GROUP_AJAX" label="LIB_CCK_GROUP_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_GROUP_DESC" />
				<field name="export" type="cckexport" default="" label="LIB_CCK_EXPORT_LABEL" description="LIB_CCK_FIELD_VALIDATION_EXPORT_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>