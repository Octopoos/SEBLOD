<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="cck_field_validation" version="2.5" method="upgrade">
	<name>plg_cck_field_validation_required</name>
	<author>Octopoos</author>
	<authorEmail>contact@seblod.com</authorEmail>
	<authorUrl>https://www.seblod.com</authorUrl>
	<copyright>Copyright (C) 2009 - 2017 SEBLOD. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<creationDate>January 2011</creationDate>
	<description>SEBLOD 3.x - www.seblod.com // by Octopoos - www.octopoos.com</description>
	<version>3.15.0</version>
	
	<scriptfile>install/script.php</scriptfile>
	
	<files>
		<folder>install</folder>
		<folder>tmpl</folder>
				
		<filename plugin="required">required.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_validation_required.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_validation_required.sys.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_cck_field_validation_required.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_cck_field_validation_required.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params" addfieldpath="/libraries/cck/construction/field">
			<fieldset name="basic">
				<field name="alert" type="text" default="PLG_CCK_FIELD_VALIDATION_REQUIRED_ALERT" label="LIB_CCK_ALERT_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_ALERT_DESC" disabled="true" />
				<field name="spacer" type="spacer" hr="false" label="PLG_CCK_FIELD_VALIDATION_SPACER_LABEL" />
				<field name="alert2" type="text" default="PLG_CCK_FIELD_VALIDATION_REQUIRED_ALERT2" label="PLG_CCK_FIELD_VALIDATION_ALERT2_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_ALERT_DESC" disabled="true" />
				<field name="alert3" type="text" default="PLG_CCK_FIELD_VALIDATION_REQUIRED_ALERT3" label="PLG_CCK_FIELD_VALIDATION_ALERT3_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_ALERT_DESC" disabled="true" />
			</fieldset>
			
			<fieldset name="advanced">
				<field name="export" type="cckexport" default="" label="LIB_CCK_EXPORT_LABEL" description="LIB_CCK_FIELD_VALIDATION_EXPORT_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>